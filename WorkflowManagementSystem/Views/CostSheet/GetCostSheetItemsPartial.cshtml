@model IEnumerable<WorkflowManagementSystem.ViewModels.CostSheetItemViewModel>

@if (Model.Count() == 0)
{
    <p class="text-danger countMessage">This cost sheet does not have any items.</p>
}
else
{
    <hr />
    <table class="table table-hover table-striped table-bordered font-style">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            @*<th>
                    Cost
                </th>*@

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                @*<td>
                        <ul>
                        @foreach (var cost in ViewBag.CostPerItem)
                        {
                            <li>@cost</li>
                        }
                            </ul>
                    </td>*@

                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>*@
            </tr>
        }

    </table>
    <br />
    <br />
    <br />
    <div  class="text-right totalCost">
        <p class="text-center">Total Cost:</p>
        <p class="text-center companyColor"> @ViewBag.Total SR</p>
    </div>


}