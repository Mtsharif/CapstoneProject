@model WorkflowManagementSystem.ViewModels.CostSheetViewModel

@{
    ViewBag.Title = "Add CEO Approval";
}

<h2>Add Approval</h2>

<a href="@Url.Action("CostSheetItems", "CostSheet", new { id = Model.CostSheetId })" class="btn btn-default btn-sm btn-round">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    Back
</a>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CostSheetId)

        <div class="form-group">
            @Html.LabelFor(model => model.CostSheetName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CostSheetName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.CostSheetName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CEODecision, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.CEODecision, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CEODecision, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CEOFeedback, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CEOFeedback, new { htmlAttributes = new { @class = "form-control", @placeholder = "Write your feedback here...", rows = 7 } })
                @Html.ValidationMessageFor(model => model.CEOFeedback, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

