@model WorkflowManagementSystem.ViewModels.ClientViewModel

@if (Request.IsAuthenticated && User.IsInRole("Client Service Employee"))
{
    {
        ViewBag.Title = "Client Details";
    }

    <h2>Client Details</h2>

    <div>
        <hr />
        <a href="@Url.Action("Index", "Client")" class="btn btn-default btn-sm btn-round">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            Back to Client List
        </a>

        <div class="container-fluid table-bordered details-Background center">
            @Html.ActionLink("Edit Client", "Edit", new { id = Model.ClientId }, new { @class = "btn btn-warning pull-right" })
            <br />
            <dl>
                <dt class="col-md-3 " style="font-size:19px;">
                    @*@Html.DisplayNameFor(model => model.FirstName)*@
                    @Html.Label("Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FirstName)
                    @Html.DisplayFor(model => model.LastName)
                </dd>
            </dl>

            <hr />
            <dl>
                <dt class="col-md-3" style="font-size:19px;">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>

            <dl>
                <dt class="col-md-3" style="font-size:19px;">
                    @Html.DisplayNameFor(model => model.MobileNumber)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MobileNumber)
                </dd>
            </dl>
            <hr />

            <dl>
                <dt class="col-md-3" style="font-size:19px;">
                    @Html.DisplayNameFor(model => model.City)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>
            </dl>
            <dl>
                <dt class="col-md-3" style="font-size:19px;">
                    @Html.DisplayNameFor(model => model.Street)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Street)
                </dd>
            </dl>
            <dl>
                <dt class="col-md-3" style="font-size:19px;">
                    @Html.DisplayNameFor(model => model.District)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.District)
                </dd>

            </dl>
        </div>
    </div>
    <p>
        @*@Html.ActionLink("Edit", "Edit", new { id = Model.ClientId })*@ 
        @*@Html.ActionLink("Back to List", "Index")*@
    </p>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}