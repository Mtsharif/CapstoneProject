@model IEnumerable<WorkflowManagementSystem.ViewModels.CostSheetItemViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item)
            </td>
  
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CostSheetId, item.ItemId}) |
                @Html.ActionLink("Details", "Details", new { id = item.CostSheetId, item.ItemId }) |
