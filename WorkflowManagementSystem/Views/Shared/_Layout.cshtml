<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - X Event Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("X Event Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@*@Html.ActionLink("About", "About", "Home")*@</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
    {

                <li>@Html.ActionLink("Employees", "Index", "Employee")</li>
                <li>@Html.ActionLink("Ushers", "Index", "Usher")</li>
                <li>@Html.ActionLink("Items", "Index", "Item")</li>
}

                    @if (Request.IsAuthenticated && User.IsInRole("Client Service Employee"))
    {
                <li>@Html.ActionLink("Projects", "Index", "EventProject")</li>
                <li>@Html.ActionLink("Clients", "Index", "Client")</li>
}
                    <li>@*@Html.ActionLink("Quotation/Invoice", "Index", "Document")*@</li>
                    <li>@Html.ActionLink("Cost Sheet", "Index", "CostSheet")</li>
                    <li>@Html.ActionLink("Assign Ushers", "Index", "UsherAppointed")</li>
                    <li>@Html.ActionLink("Tasks", "Index", "EmployeeTask")</li>
                    <li>@Html.ActionLink("Assign Tasks", "Index", "TaskAssignment")</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Production Employee"))
                    {
                                        <li>@Html.ActionLink("Ushers", "Index", "Usher")</li>

                    }


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - X Event Management</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
