@model IEnumerable<WorkflowManagementSystem.ViewModels.TaskAssignmentViewModel>

@{
    ViewBag.Title = "Tasks Assigned";
}

<h2>Tasks Assigned</h2>

@*<p>
        @Html.ActionLink("Assign Task", "Assign")
    </p>*@
<br />

<table class="table table-hover table-striped font-style" id="tasksTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventProject)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Deadline)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Priority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsCompleted)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.AnyEmployee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaskName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventProject)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Deadline)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCompleted)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.AnyEmployee)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.TaskAssignmentId }, new { @class = "btn btn-primary btn-xs btn-sharp" })
                    @Html.ActionLink("Edit", "Edit", new { id = item.TaskAssignmentId }, new { @class = "btn btn btn-warning btn-xs btn-sharp btn-right-space" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.TaskAssignmentId }, new { @class = "btn btn-danger btn-xs btn-sharp" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/jquery.dataTables.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/dataTables.scroller.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/DataTables/dataTables.bootstrap.min.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tasksTable').DataTable({

                "scrollY": "300px",
                "scrollCollapse": true,
                "paging": false,

                "columnDefs": [
                    { "orderable": false, "targets": -1 }
                ]
            });
        });
    </script>
}

@section styles
{
    <link href="@Url.Content("/Content/DataTables/css/dataTables.scroller.min.css")" rel="stylesheet" />
    <link href="@Url.Content("/Content/DataTables/css/dataTables.bootstrap.min.css")" rel="stylesheet" />
}