@model WorkflowManagementSystem.ViewModels.UsherAppointedViewModel

@if (Request.IsAuthenticated && User.IsInRole("Production Employee"))
{
    {
        ViewBag.Title = "Edit Assigned Usher";
    }

    <h2>Edit Assigned Usher</h2>

    <a href="@Url.Action("Index", "UsherAppointed")" class="btn btn-default btn-sm btn-round">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        Back to List
    </a>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UsherAppointedId)
            <div class=" col-md-7 col-md-offset-4 text-center">
                <div class="form-group">
                    @Html.LabelFor(model => model.Usher, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("UsherId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Usher, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EventProject, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("EventProjectId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EventProject, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="form-group">
                <div class=" col-md-7 col-md-offset-4 text-center">
                    <input type="submit" value="Save" class="btn btn-success center-button2 " />
                </div>
            </div>
        </div>
    }

    @*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@
}